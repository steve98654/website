" Setup color options based on the supported color modes
" of the current terminal.
if has("win32")
    colorscheme torte
    set guifont=Courier:h10:cANSI
else
    if &term =~ "linux"
        if has("terminfo")
            set t_Co=8
            set t_Sf=[3%p1%dm
            set t_Sb=[4%p1%dm
        else
            set t_Co=8
            set t_Sf=[3%dm
            set t_Sb=[4%dm
        endif
        colorscheme torte
    elseif &term =~ "xterm" 
        set term=xterm-color
        set t_Co=16
        colorscheme torte
    elseif &term =~ "screen" 
        set t_Co=16
        colorscheme torte
    endif
endif

